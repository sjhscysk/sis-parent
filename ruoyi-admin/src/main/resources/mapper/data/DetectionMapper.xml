<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.data.mapper.DetectionMapper">
    
    <resultMap type="Detection" id="DetectionResult">
        <result property="id"    column="id"    />
        <result property="bands"    column="bands"    />
        <result property="frequency"    column="frequency"    />
        <result property="range"    column="range"    />
        <result property="direction"    column="direction"    />
    </resultMap>

    <sql id="selectDetectionVo">
        select id, bands, frequency, range, direction from t_detection
    </sql>

    <select id="selectDetectionList" parameterType="Detection" resultMap="DetectionResult">
        <include refid="selectDetectionVo"/>
        <where>  
            <if test="direction != null  and direction != ''"> and direction = #{direction}</if>
        </where>
    </select>
    
    <select id="selectDetectionById" parameterType="Long" resultMap="DetectionResult">
        <include refid="selectDetectionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDetection" parameterType="Detection">
        insert into t_detection
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null ">id,</if>
            <if test="bands != null  and bands != ''">bands,</if>
            <if test="frequency != null  and frequency != ''">frequency,</if>
            <if test="range != null  and range != ''">range,</if>
            <if test="direction != null  and direction != ''">direction,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null ">#{id},</if>
            <if test="bands != null  and bands != ''">#{bands},</if>
            <if test="frequency != null  and frequency != ''">#{frequency},</if>
            <if test="range != null  and range != ''">#{range},</if>
            <if test="direction != null  and direction != ''">#{direction},</if>
         </trim>
    </insert>

    <update id="updateDetection" parameterType="Detection">
        update t_detection
        <trim prefix="SET" suffixOverrides=",">
            <if test="bands != null  and bands != ''">bands = #{bands},</if>
            <if test="frequency != null  and frequency != ''">frequency = #{frequency},</if>
            <if test="range != null  and range != ''">range = #{range},</if>
            <if test="direction != null  and direction != ''">direction = #{direction},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDetectionById" parameterType="Long">
        delete from t_detection where id = #{id}
    </delete>

    <delete id="deleteDetectionByIds" parameterType="String">
        delete from t_detection where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>