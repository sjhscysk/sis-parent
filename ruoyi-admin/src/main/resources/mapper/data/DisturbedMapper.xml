<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.data.mapper.DisturbedMapper">
    
    <resultMap type="Disturbed" id="DisturbedResult">
        <result property="id"    column="id"    />
        <result property="bands"    column="bands"    />
        <result property="frequency"    column="frequency"    />
        <result property="power"    column="power"    />
        <result property="range"    column="range"    />
        <result property="direction"    column="direction"    />
        <result property="mode"    column="mode"    />
    </resultMap>

    <sql id="selectDisturbedVo">
        select id, bands, frequency, power, range, direction, mode from t_disturbed
    </sql>

    <select id="selectDisturbedList" parameterType="Disturbed" resultMap="DisturbedResult">
        <include refid="selectDisturbedVo"/>
        <where>  
        </where>
    </select>
    
    <select id="selectDisturbedById" parameterType="Long" resultMap="DisturbedResult">
        <include refid="selectDisturbedVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDisturbed" parameterType="Disturbed">
        insert into t_disturbed
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null ">id,</if>
            <if test="bands != null  and bands != ''">bands,</if>
            <if test="frequency != null  and frequency != ''">frequency,</if>
            <if test="power != null  and power != ''">power,</if>
            <if test="range != null  and range != ''">range,</if>
            <if test="direction != null  and direction != ''">direction,</if>
            <if test="mode != null  and mode != ''">mode,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null ">#{id},</if>
            <if test="bands != null  and bands != ''">#{bands},</if>
            <if test="frequency != null  and frequency != ''">#{frequency},</if>
            <if test="power != null  and power != ''">#{power},</if>
            <if test="range != null  and range != ''">#{range},</if>
            <if test="direction != null  and direction != ''">#{direction},</if>
            <if test="mode != null  and mode != ''">#{mode},</if>
         </trim>
    </insert>

    <update id="updateDisturbed" parameterType="Disturbed">
        update t_disturbed
        <trim prefix="SET" suffixOverrides=",">
            <if test="bands != null  and bands != ''">bands = #{bands},</if>
            <if test="frequency != null  and frequency != ''">frequency = #{frequency},</if>
            <if test="power != null  and power != ''">power = #{power},</if>
            <if test="range != null  and range != ''">range = #{range},</if>
            <if test="direction != null  and direction != ''">direction = #{direction},</if>
            <if test="mode != null  and mode != ''">mode = #{mode},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDisturbedById" parameterType="Long">
        delete from t_disturbed where id = #{id}
    </delete>

    <delete id="deleteDisturbedByIds" parameterType="String">
        delete from t_disturbed where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>